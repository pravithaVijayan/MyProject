<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="reservation_pdf">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>Research Report</h2>
                        </div>

                        <div>
                            <table>
                                <tr>
                                    <td>Book</td>
                                    <td>:</td>
                                    <td>
                                        <t t-foreach="book_ids" t-as="l">
                                            <span t-esc="l"/>
                                            <br/>
                                        </t>
                                    </td>
                                </tr>
                                <br/>
                                <tr>
                                    <td>Scholar</td>
                                    <td>:</td>
                                    <td>
                                        <t t-esc="form['scholar_id'][1]"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Date</td>
                                    <td>:</td>
                                    <td>
                                        <t t-esc="date"/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <br/>
                        </div>

                        <table class="table table-bordered mt32">
                            <thead>
                                <tr>
                                    <th name="th_reference" class="text-left">
                                        <span>Referance</span>
                                    </th>
                                    <!--                                    <th name="th_scholar" class="text-left">-->
                                    <!--                                        <span>Books</span>-->
                                    <!--                                    </th>-->
                                    <th name="th_responsible"
                                        class="text-left">
                                        <span>Responsible</span>
                                    </th>
                                </tr>
                            </thead>
                            <t t-foreach="reservations" t-as="line">
                                <tbody>
                                    <tr>
                                        <td>
                                            <span t-esc="line['name']"/>
                                        </td>

                                        <td>
                                            <span t-esc="line['responsible_user'][1]"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </t>
                        </table>
                    </div>

                </t>
            </t>
        </template>
    </data>
</odoo>
