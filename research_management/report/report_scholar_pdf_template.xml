<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="scholar_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure">
                                <div class="row">
                                    <div class="col-8">
                                        <table class="table table-bordered"
                                               style="border: 2px solid black;">
                                            <table>
                                                <tr>
                                                    <td colspan="3"
                                                        class="text-center">
                                                        <strong>
                                                            <span t-field="o.name"/>
                                                        </strong>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Age</strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.age"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Gender
                                                            </strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.sex"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Institute
                                                            </strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.institute"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span>
                                                            <strong>Partner
                                                            </strong>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span>:</span>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.contacts"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
